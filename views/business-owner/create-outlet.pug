extends layout

block content
  .content-wrapper
    .container-fluid
      ol.breadcrumb
        li.breadcrumb-item
          h4 Create Outlet
      div
        form.mt-4(action='/action_page.php')
          .form-group.col-md-6
            label(for='line') Business:
            select.custom-select(name='get_atr')
              option(value='') Business
              option(value='') Name
              option(value='') Address
          .form-group.col-md-6
            label(for='name') Name of Outlet:
            input#pwd.form-control(type='text', placeholder='Name', name='pswd')
          .form-group.col-md-6
            label(for='email') Email:
            input#pwd.form-control(type='text', placeholder='somthing@something.com', name='pswd')
          .form-group.col-md-6
            label(for='website') Website:
            input#website.form-control(type='text', placeholder='http://www.something.com', name='pswd')
          .form-group.col-md-9
            label(for='description') Description:
            textarea.form-control(name='', id='', cols='30', rows='5')  Description about is 
          label.ml-3(for='description') Address :
          .form-group.col-md-9.border.ml-3.pt-2
            .form-row
              .form-group.col
                label(for='line1') Line 1
                input#inputEmail4.form-control(type='text', placeholder='Line 1 address')
              .form-group.col
                label(for='line2') Line 2
                input#inputPassword4.form-control(type='text', placeholder='Line 2 address')
            .form-row
              .form-group.col-md-6
                label(for='line1') Province
                select.custom-select(name='get_atr')
                  option(value='') Province
                  option(value='') Name
                  option(value='') Address
              .form-group.col-md-3
                label(for='line2') City
                select.custom-select(name='get_atr')
                  option(value='') City
                  option(value='') Name
                  option(value='') Address
              .form-group.col-md-3
                label(for='zipcode') Postal code
                input#inputPassword4.form-control(type='text', placeholder='Postal Code')
            .form-row
              .form-group.col-md-4
                button.btn.btn-secondary.btn-block(type='submit') Geolocate
            .form-row
              .form-group.col-md-3
                label(for='zipcode') Latitude
                input#inputPassword4.form-control(type='text', placeholder='Latitude', readonly='')
              .form-group.col-md-3
                label(for='zipcode') Longitude
                input#inputPassword4.form-control(type='text', placeholder='Longitude', readonly='')
            .form-row
              .form-group.col-md-3
                a(href='')  View in maps >
          label.ml-3(for='description') Open Hours :
          .form-group.col-md-9.border.ml-3.pt-2
            .form-row
              .form-group.col
                h6 Monday
              .form-group.col
                .form-check
                  input#gridCheck1.form-check-input(type='checkbox')
                  label.form-check-label(for='gridCheck1')
                    | Closed
              .form-group.col
                input(type='time' value='08:00' style='width: 100%')
              .form-group.col
                input(type='time' value='18:00' style='width: 100%')
            .form-row
              .form-group.col
                h6 Tuesday
              .form-group.col
                .form-check
