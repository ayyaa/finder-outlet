            .form-row
              .form-group.col
                label(for='line1') Line 1
                input#line1.form-control(type='text', placeholder='Line 1 address' name='line1')
              .form-group.col
                label(for='line2') Line 2
                input#line2.form-control(type='text', placeholder='Line 2 address' name='line2')
            .form-row
              .form-group.col-md-3
