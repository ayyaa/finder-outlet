extends layout

block content
  .content-wrapper
    .container-fluid
      ol.breadcrumb
        li.breadcrumb-item
          h4 Create Outlet
      |
      - if(error){
      .alert.alert-danger 
       .text-center #{error}
      - }
      |
      - if(info){
      .alert.alert-info 
        .text-center #{info}
      - }
      |
      - if(success){
      .alert.alert-success 
        .text-center #{success}
      - }
      div
        form.mt-4(action='/action_page.php')
          .form-group.col-md-6
            label(for='line') Business:
            select#get_business.form-control.selectpicker(name='get_business')
              each buss in valBusiness
                    option(value=buss.id) #{buss.name}
          .form-group.col-md-6
            label(for='name') Name of Business:
            input#name.form-control(type='text', placeholder='Name', name='name')
          .form-group.col-md-6
            label(for='email') Email:
            input#email.form-control(type='text', placeholder='somthing@something.com', name='email')
          .form-group.col-md-6
            label(for='website') Website:
            input#website.form-control(type='text', placeholder='http://www.something.com', name='website')
          .form-group.col-md-9
            label(for='description') Description:
            textarea.form-control(name='', id='', cols='30', rows='5')  Description about is 
          label.ml-3(for='description') Address :
          .form-group.col-md-9.border.ml-3.pt-2
            .form-row
              .form-group.col-md-6
                label(for='state') State
                select#state.custom-select(name='state')
                  option(value='' selected) - select -
                  //- each value in valState
                    option(value=value.code) #{value.name}
              .form-group.col-md-6
                label(for='line2') Region
                select#region.custom-select(name='province')
                  option(value='0') - select -
              .form-group.col-md-6
                label(for='line2') City
