extends layout-admin

block content 
  .content-wrapper
    .container-fluid
      ol.breadcrumb
        li.breadcrumb-item
          h4 Outlets
      .card.mb-3
        .card-header
          i.fa.fa-table
          |  Data List Outlets
        .card-body
          form.form-inline(method='GET')
            .form-group.col-md-3
              input#pwd.form-control(type='text', placeholder='Keyword', name='search', style='width:100%')
            .form-group.col-md-2
              select.custom-select(style='width:100%', name='get_atr')
