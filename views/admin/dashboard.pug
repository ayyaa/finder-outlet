extends layout-admin

block content
  .content-wrapper
    .container-fluid
      |
      - if(message){
      div 
        | !{message}
      - }
      |
      - if(info){
      div 
        | !{info}
      - }
      ol.breadcrumb
        li.breadcrumb-item
          h4 Dashboard
      .row
        .col-xl-3.col-sm-6.mb-3
          .card.secondary-text.o-hidden.h-100(style='background-color:#2a93d5')
            .card-body
              .card-body-icon
                i.fa.fa-fw.fa-briefcase
              .mr-5(style='font-size:20px;') 26
            a.card-footer.secondary-text.clearfix.small.z-1(href='/admin/list-categories')
              span.float-left Categories
              span.float-right
                i.fa.fa-angle-right
        .col-xl-3.col-sm-6.mb-3
          .card.secondary-text.o-hidden.h-100(style='background-color:#2a93d5')
            .card-body
              .card-body-icon
                i.fa.fa-fw.fa-briefcase
              .mr-5(style='font-size:20px;') 26
            a.card-footer.secondary-text.clearfix.small.z-1(href='/admin/list-business')
              span.float-left Business
              span.float-right
                i.fa.fa-angle-right
        .col-xl-3.col-sm-6.mb-3
          .card.secondary-text.o-hidden.h-100(style='background-color:#2a93d5')
            .card-body
              .card-body-icon
                i.fa.fa-fw.fa-bank
              .mr-5(style='font-size:20px;') 11
            a.card-footer.secondary-text.clearfix.small.z-1(href='/admin/list-outlets')
              span.float-left Outlets
              span.float-right
                i.fa.fa-angle-right
        .col-xl-3.col-sm-6.mb-3
          .card.secondary-text.o-hidden.h-100(style='background-color:#2a93d5')
            .card-body
              .card-body-icon
                i.fa.fa-fw.fa-book
              .mr-5(style='font-size:20px;') 123
            a.card-footer.secondary-text.clearfix.small.z-1(href='/admin/list-reviews')
              span.float-left Reviews
              span.float-right
                i.fa.fa-angle-right
      .card.mb-3
        .card-header
          a(href='')
            h5 New Businesses
        .card-body
          .row
            .col-md-12
              .table-responsive.mt-2
                table#dataTable8.table.table-bordered(width='100%', cellspacing='0')
                  thead
                    tr.bg-2.text-white
                      th(scope='col') Name
                      th(scope='col') Line of Business
                      th(scope='col') Outlets
                      th.text-center(scope='col') 
                  tbody
                    for business in data
                      tr
                        th(scope='row')= business.name
                        td= business.dataValues.category
                        td= business.dataValues.categories[0].dataValues.countoutlet
                          | 
                          a(href='/admin/list-outlets='+business.id) view outlets
                        td
                          a(href='/admin/list-business') view business
      .card.mb-3
        .card-header
          a(href='')
            h5 New Outlets
        .card-body
          .row
            .col-md-12
              .table-responsive.mt-2
                table#dataTable2.table.table-bordered(width='100%', cellspacing='0')
                  thead
                    tr.bg-2.text-white
                      th(scope='col') Name
                      th(scope='col') Business
                      th(scope='col') City
                      th(scope='col') Page Views
                      th.text-center(scope='col') 
                  tbody
                    for outlet in data2
                      tr
                        th(scope='row')= outlet.name
                        td= outlet.dataValues.business.name
                        td= outlet.dataValues.address.administrative_area_2
                        td 30
                        td
                          a(href='/admin/list-outlets') view outlets
    a.scroll-to-top.rounded(href='#page-top')
      i.fa.fa-angle-up

