extends layout-admin

block content 
  .content-wrapper
    .container-fluid
      ol.breadcrumb
        li.breadcrumb-item
          h4 Business Owner
      .card.mb-3
        .card-header
          i.fa.fa-table
          |  Data List Business Owner
        .card-body
          .ml-3
            form.form-inline(method='GET', style='overflow-x:auto;')
              .form-group.col-md-3
                input#pwd.form-control(type='text', placeholder='Keyword', name='search', style='width:100%')
              .form-group.col-md-3
                select.custom-select.form-control(style='width:100%', name='get_atr')
                  option(value='') Line of Business
                  option(value='') Name
                  option(value='') Address
              .form-group.col-md-3
                button.btn.btn-success.form-control(type='submit')
                  span.fa.fa-filter
                  |  Filter
          .col-md-12
            .table-responsive.mt-4.pl-0
              table#dataTable5.table.table-bordered(width='100%', cellspacing='0')
                thead
                  tr.bg-2.text-white
                    th(scope='col') Username
                    th(scope='col') Full name
                    th(scope='col') Email
                    th(scope='col') Contact Number
                tbody
                  for user in data
                    tr
                      th(scope='row')= user.username
                      td= user.name
                      th= user.email
                      th= user.contact_no
        .card-footer.small.text-muted Updated yesterday at 11:59 PM
    a.scroll-to-top.rounded(href='#page-top')
      i.fa.fa-angle-up
